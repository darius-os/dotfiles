colorscheme nord

let mapleader=","
let maplocalleader="m"

syntax enable
set hidden
set encoding=utf-8
set fileencoding=utf-8
set ruler
set mouse=a
set splitright
set splitbelow
set tabstop=2
set shiftwidth=2
set smarttab
set autoindent
set smartindent
set number
set clipboard=unnamedplus
set incsearch
set nowrap
set expandtab


autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
