{
  "folders": [
    {
      "path": "../../Dropbox/code/scripts"
    },
    {
      "path": "../../git-repos/darius-os/scrolls"
    },
    {
      "path": "../../git-repos/darius-os/dotfiles"
    }
  ],
  "settings": {
    // Editor
    "files.maxMemoryForLargeFilesMB": 8092,
    "editor.fontSize": 14,
    "debug.console.fontSize": 10,
    "editor.suggestFontSize": 10,
    "terminal.integrated.fontSize": 10,
    "terminal.integrated.fontFamily": "Fira Code Retina",
    "terminal.integrated.cursorStyle": "block",
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code Medium', 'monospace', monospace, 'Droid Sans Fallback'",
    "debug.console.fontFamily": "'Fira Code Retina'",
    // Theme
    "gruvboxMaterial.italicComments": true,
    // Markdown
    "markdown-preview-enhanced.codeBlockTheme": "funky.css",
    "markdown-preview-enhanced.enableTypographer": true,
    // "markdown-preview-enhanced.frontMatterRenderingOption": "table",
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.previewTheme": "none.css",
    "markdown-preview-enhanced.revealjsTheme": "solarized.css",
    "markdown-preview-enhanced.usePandocParser": true,
    "markdown-preview-enhanced.enableEmojiSyntax": true,
    // Shell
    "bashIde.highlightParsingErrors": true,
    "bashIde.explainshellEndpoint": "http://localhost:5000",
    "bashIde.globPattern": "**/*@(.sh|.bash)",
    "shellcheck.ignorePatterns": {
      "**/*.zsh": true,
      "**/*sed": true
    },
    "shellcheck.enableQuickFix": true,
    "shellcheck.exclude": [],
    // Python
    "python.pythonPath": "/home/darius/.local/share/pyvenv/scripts/bin/python3.8",
    "python.analysis.cacheFolderPath": "/home/darius/.cache/pycache",
    "python.venvPath": "/home/darius/.local/share/pyvenv/",
    "python.analysis.memory.keepLibraryAst": true,
    // "python.linting.pylintUseMinimalCheckers": true,
    "python.languageServer": "Microsoft",
    "python.jediMemoryLimit": -1,
    "python.dataScience.textOutputLimit": 0,
    "python.analysis.logLevel": "Trace",
    // Vim
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#928374", "#282828"],
    "vim.statusBarColors.insert": "#282828",
    "vim.statusBarColors.visual": "#B48EAD",
    "vim.statusBarColors.visualline": "#B48EAD",
    "vim.statusBarColors.visualblock": "#A3BE8C",
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#1d2021",
    "vim.statusBarColors.searchinprogressmode": "#1d2021",
    "vim.statusBarColors.easymotionmode": "#1d2021",
    "vim.statusBarColors.easymotioninputmode": "#1d2021",
    "vim.statusBarColors.surroundinputmode": "#1d2021",
    "vim.leader": ",",
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<space>"],
        "commands": ["workbench.action.files.save"]
      },
      {
        "before": ["<leader>", "<space>"],
        "commands": [":nohl"]
      },
      {
        "before": ["<leader>", "t"],
        "commands": ["workbench.action.toggleSidebarVisibility"]
      },
      {
        "before": ["<leader>", "a"],
        "commands": ["workbench.action.toggleActivityBarVisibility"]
      },
      {
        "before": ["<leader>", "s"],
        "commands": ["workbench.action.toggleStatusbarVisibility"]
      },
      {
        "before": ["<leader>", "c"],
        "commands": ["editor.action.commentLine"]
      },
      {
        "before": ["<leader>", "f"],
        "commands": ["revealInExplorer"]
      },
      {
        "before": ["<leader>", "r", "e"],
        "commands": ["editor.action.rename"]
      },
      {
        "before": ["<leader>", "r", "f"],
        "commands": ["fileutils.renameFile"]
      },
      {
        "before": ["<leader>", "o", "g"],
        "commands": ["workbench.action.showAllSymbols"]
      },
      {
        "before": ["<leader>", "o", "p"],
        "commands": ["workbench.action.quickOpen"]
      }
    ],
    "vim.visualModeKeyBindings": [
      {
        "before": ["<leader>", "c"],
        "commands": ["editor.action.commentLine", "extension.vim_escape"]
      }
    ]
  }
}
